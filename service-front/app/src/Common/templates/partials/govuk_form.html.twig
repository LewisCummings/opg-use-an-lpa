{% block form_input_checkbox %}

    <div class="govuk-form-group {% if element.getMessages() is not empty %}govuk-form-group--error{% endif %}">
        <div class="govuk-checkboxes">
            <div class="govuk-checkboxes__item">

                <input class="govuk-checkboxes__input" id="terms" name="terms" type="checkbox">

                <label class="govuk-label govuk-checkboxes__label" for="terms">
                    I agree to the <a href="#" class="govuk-link">terms of use</a>

                    {{ govuk_error(element) }}
                </label>

            </div>
        </div>
    </div>

{% endblock form_input_checkbox %}