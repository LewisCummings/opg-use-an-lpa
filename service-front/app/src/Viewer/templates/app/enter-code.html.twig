{% extends '@layout/default.html.twig' %}

{% block title %}Enter code{% endblock %}

{% block content %}
<div class="govuk-width-container">
    {{ include('@partials/new-service.html.twig') }}
    <a href="/" class="govuk-back-link">Back</a>

    <main class="govuk-main-wrapper">
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-one-half">
                <h1 class="govuk-heading-xl">Enter Code</h1>

                {{ form_start(form) }}
                    <fieldset class="govuk-fieldset">
                        <input type="hidden" name="__csrf" value="{{ csrf_token }}">

                        <div class="govuk-form-group">
                            <label class="govuk-label" for="code">
                                LPA code
                            </label>
                            <span id="name-error" class="govuk-error-message">
                                <span class="govuk-visually-hidden">Error:</span> Enter your full name
                            </span>
                            <input class="govuk-input govuk-input--error" id="code" name="code"
                                   type="text">
                        </div>

                        <details class="govuk-details">
                            <summary class="govuk-details__summary">
                                <span class="govuk-details__summary-text">
                                    What is a share code?
                                </span>
                            </summary>
                            <div class="govuk-details__text">
                                A share code is given to you by the donor or an attorney named on the lasting power
                                of attorney.
                            </div>
                        </details>

                        <button type="submit" class="govuk-button">Save and continue</button>
                    </fieldset>
                {{ form_end(form) }}
            </div>
        </div>

    </main>
</div>

{% endblock %}
